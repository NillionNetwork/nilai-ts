{
  "name": "@nillion/nilai-ts",
  "version": "0.0.0-alpha.0",
  "description": "Nilai Typescript SDK",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "ci": "biome check .",
    "prepublishOnly": "pnpm run build",
    "example:api-key": "tsx examples/0-api-key.ts",
    "example:delegation-token": "tsx examples/1-delegation-token.ts"
  },
  "keywords": [
    "openai",
    "nilauth",
    "delegation-token",
    "authentication"
  ],
  "author": "Jos√© Cabrero-Holgueras <jose.cabrero@nillion.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NillionNetwork/nilai-ts.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@nillion/nuc": "0.1.0-rc.8",
    "@noble/curves": "^1.9.2",
    "@noble/secp256k1": "^2.3.0",
    "openai": "^5.3.0",
    "zod": "^3.25.64"
  }
}
